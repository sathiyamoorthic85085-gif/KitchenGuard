{
  "name": "@getmocha/vite-plugins",
  "version": "3.0.17",
  "description": "Vite plugins for Mocha.",
  "main": "dist/index.js",
  "type": "module",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
