    "@types/babel__parser": "^7.0.0",
    "@types/babel__traverse": "^7.20.7",
    "@types/node": "^22.15.3",
    "typescript": "^5.6.2",
    "vite": "^6.2.0",
    "vitest": "^3.1.2"
